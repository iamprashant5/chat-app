{
    "name": "authentication",
    "version": "0.0.1",
    "description": "Sourceloop Authentication Service",
    "keywords": [
        "loopback-microservice",
        "loopback"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=10.16"
    },
    "scripts": {
        "build": "lb-tsc",
        "build:watch": "lb-tsc --watch",
        "lint": "npm run eslint && npm run prettier:check",
        "lint:fix": "npm run eslint:fix && npm run prettier:fix",
        "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
        "prettier:check": "npm run prettier:cli -- -l",
        "prettier:fix": "npm run prettier:cli -- --write",
        "eslint": "lb-eslint --report-unused-disable-directives .",
        "eslint:fix": "npm run eslint -- --fix",
        "pretest": "npm run rebuild",
        "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
        "posttest": "npm run lint",
        "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
        "docker:build": "DOCKER_BUILDKIT=1 docker build --build-arg NR_ENABLED=$NR_ENABLED_VALUE -t $IMAGE_REPO_NAME authentication-$npm_package_name:$npm_package_version .",
        "docker:run": "docker run --network host --env-file ./.env -p 3000:3000 -d authentication-$npm_package_name:$npm_package_version",
        "symlink-resolver": "symlink-resolver",
        "resolve-links": "npm run symlink-resolver build ./node_modules/@local",
        "premigrate": "npm run build",
        "migrate": "node ./dist/migrate",
        "preopenapi-spec": "npm run build",
        "openapi-spec": "node ./dist/openapi-spec",
        "prestart": "npm run rebuild && npm run openapi-spec",
        "start": "node -r ./dist/opentelemetry-registry.js -r source-map-support/register .",
        "dev": "nodemon --watch src -e ts --exec \"npm run start\"",
        "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
        "rebuild": "npm run clean && npm run build",
        "docker:push": "sudo docker push $IMAGE_REPO_NAME/authentication-$npm_package_name:$npm_package_version",
        "docker:build:dev": "DOCKER_BUILDKIT=1 sudo docker build --build-arg NR_ENABLED=$NR_ENABLED_VALUE -t $IMAGE_REPO_NAME/\n      authentication-$npm_package_name:$IMAGE_TAG_VERSION .",
        "docker:push:dev": "sudo docker push $IMAGE_REPO_NAME/authentication-$npm_package_name:$IMAGE_TAG_VERSION",
        "coverage": "nyc npm run test"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "author": "Sama Gyaneshwar<sama.gyaneshwar@sourcefuse.com>",
    "license": "MIT",
    "files": [
        "README.md",
        "dist",
        "src",
        "!*/__tests__"
    ],
    "dependencies": {
        "@loopback/boot": "^4.1.2",
        "@loopback/context": "^4.1.2",
        "@loopback/core": "^3.1.2",
        "@loopback/openapi-v3": "^7.1.2",
        "@loopback/repository": "^4.1.2",
        "@loopback/rest": "^11.1.2",
        "@loopback/rest-explorer": "^4.1.2",
        "@loopback/service-proxy": "^4.1.2",
        "@opentelemetry/exporter-jaeger": "^1.0.1",
        "@opentelemetry/node": "^0.24.0",
        "@opentelemetry/plugin-dns": "^0.15.0",
        "@opentelemetry/plugin-http": "^0.18.2",
        "@opentelemetry/plugin-https": "^0.18.2",
        "@opentelemetry/plugin-pg": "^0.15.0",
        "@opentelemetry/plugin-pg-pool": "^0.15.0",
        "@opentelemetry/tracing": "^0.24.0",
        "@sourceloop/authentication-service": "^4.0.7",
        "@sourceloop/core": "^6.1.4",
        "bcrypt": "^5.0.1",
        "loopback-connector-kv-redis": "^4.0.0",
        "loopback-connector-postgresql": "^5.5.0",
        "loopback4-authentication": "^6.0.3",
        "loopback4-authorization": "5.0.1",
        "patch-package": "^6.4.7",
        "prom-client": "^13.2.0",
        "swagger-stats": "^0.99.2",
        "symlink-resolver": "",
        "tslib": "^2.0.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@loopback/build": "^8.1.2",
        "@loopback/eslint-config": "^12.0.4",
        "@loopback/testlab": "^4.1.2",
        "@types/bcrypt": "^5.0.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^12.20.47",
        "dotenv": "^16.0.0",
        "dotenv-extended": "^2.9.0",
        "eslint": "^8.10.0",
        "nodemon": "^2.0.15",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.21",
        "typescript": "~4.6.4"
    }
}
